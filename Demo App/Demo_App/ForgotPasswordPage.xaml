<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="Demo_App.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Padding="0,140,0,0">
            <Image Source="Icon.png" Margin="10,20,10,20"></Image>
            <Entry Placeholder="Email" Margin="20,0,0,20"/>
            <Button Margin="0,0,10,0" Text="Reset password" TextColor="White" BackgroundColor="#50aaa5" HorizontalOptions="Center" WidthRequest="350" HeightRequest="50" BorderRadius="10" BorderWidth="8"/>
            <StackLayout Orientation="Horizontal">
                <Label Margin="65,10,0,0" Text="Not registered?" TextColor="Black">
                </Label>
                <Label Text="Create a free account" Margin="0,10,0,40" TextColor="#50aaa5"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="NavigateToRegisterPage"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>