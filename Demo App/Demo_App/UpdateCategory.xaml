<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo_App.UpdateCategory"
             Title="Category">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Next" Order="Primary" Priority="0" Clicked="UpdateCategories"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightGray">
            <Grid RowSpacing="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" BackgroundColor="White" Padding="10">
                    <Label Text="Name" TextColor="Black"></Label>
                    <Entry x:Name="CategoryName"  Placeholder="Category name"></Entry>
                </StackLayout>
                <StackLayout Grid.Row="1" BackgroundColor="White">

                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>