<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Passcode Settings"
             x:Class="Demo_App.PasscodeLockPage">
    <ContentPage.Content>
        <TableView Intent="Settings" RowHeight="70">
            <TableRoot>
                <TableSection>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal">
                            <Label Margin="0,10,0,0" HorizontalOptions="StartAndExpand" Text="Enable Passcode"
                              TextColor="Black" />
                            <Switch HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>