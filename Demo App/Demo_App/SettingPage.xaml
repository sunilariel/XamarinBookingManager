        <TableView Intent="Settings" RowHeight="70">
            <TableRoot>
                <TableSection>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal">
                            <Image  Source="setting.png" />
                            <Label Margin="0,10,0,0" HorizontalOptions="Center" Text="Business Hours"
                              TextColor="Black" />
                            <Image HeightRequest="20" WidthRequest="20" Source="left_arrow.png"
                              HorizontalOptions="EndAndExpand"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="business_Hours"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal">
                            <Image  Source="setting.png" />
                            <Label Margin="0,10,0,0" HorizontalOptions="Center" Text="Currency"
                              TextColor="Black" />
                            <Image HeightRequest="20" WidthRequest="20" Source="left_arrow.png"
                              HorizontalOptions="EndAndExpand"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Currency_Tapped"/>
